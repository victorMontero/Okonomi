<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_income_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_income"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_debt_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_debt"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_income_total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_total"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/income_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="16sp"
                tools:text="$ 1000.00"
                />

            <TextView
                android:id="@+id/debt_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="16sp"
                tools:text="$ 1000.00"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="#848484" />

            <TextView
                android:id="@+id/detail_total_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="16sp"
                tools:text="$ 1000.00"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>